BACKUP_B2_APPLICATION_KEY_ID=
BACKUP_B2_APPLICATION_KEY=


# Bittensor Archive Node for querying old blocks (default: "archive")
# Used automatically when block is >300 blocks behind head
BITTENSOR_ARCHIVE_NETWORK=archive

# Sentinel Mode Configuration
# SENTINEL_MODE: live (default) - follows chain head, backfill - processes block range
SENTINEL_MODE=live
# BLOCK_START/BLOCK_END: Required when SENTINEL_MODE=backfill
BLOCK_START=
BLOCK_END=
# BACKFILL_RATE_LIMIT: Seconds between blocks in backfill mode (default: 1.0)
BACKFILL_RATE_LIMIT=1.0
# BACKFILL_BATCH_SIZE: Blocks per Celery task in fast_backfill mode (default: 10)
BACKFILL_BATCH_SIZE=10
# BACKFILL_BATCH_DELAY: Seconds between spawning batch tasks (default: 1.0)
BACKFILL_BATCH_DELAY=1.0

# Sentinel Plugins - control which block task plugins are loaded
# Comma-separated list: "extrinsics", "metagraph"
# Empty = all plugins enabled (default)
# Examples:
#   SENTINEL_PLUGINS=extrinsics,metagraph  # Both plugins
#   SENTINEL_PLUGINS=extrinsics            # Only extrinsics sync
#   SENTINEL_PLUGINS=metagraph             # Only metagraph dump
SENTINEL_PLUGINS=

# Metagraph Configuration
# METAGRAPH_NETUIDS: Comma-separated list of subnet UIDs to sync (empty = all 1-128)
# Example: METAGRAPH_NETUIDS=1,8,19
METAGRAPH_NETUIDS=
# METAGRAPH_LITE=0 (default) - full mode with weights and bonds data
# METAGRAPH_LITE=1 - lite mode without weights and bonds (smaller data)
METAGRAPH_LITE=0
